# === Repo root ===
PROJECT_DIR={{Project directory}}

# === Backups output (host path) ===
BACKUP_DIR=/srv/pikachu-n8n/backups

# === Rootless podman socket path (set PODMAN_UID correctly) ===
PODMAN_UID=1000
PODMAN_SOCK=/run/user/${PODMAN_UID}/podman/podman.sock

# === Domain / URLs ===
N8N_HOST={{YOURDOMAIN"}}
N8N_PROTOCOL=https
WEBHOOK_URL=https://${N8N_HOST}/
N8N_EDITOR_BASE_URL=https://${N8N_HOST}/

# === Timezone ===
TZ=Asia/Kolkata

# === Images (pin for stability; upgrade intentionally) ===
TRAEFIK_IMAGE=traefik:v3.6
N8N_IMAGE=n8nio/n8n:2.2.1
POSTGRES_IMAGE=postgres:16-alpine
REDIS_IMAGE=redis:8.4.0-alpine

# === Postgres ===
POSTGRES_DB=n8n
POSTGRES_USER=n8n

# === Memory safety for small VM ===
N8N_MAX_OLD_SPACE_SIZE=512

# === Named volumes (Podman-managed) ===
VOL_POSTGRES=pikachu_pgdata
VOL_N8N=pikachu_n8n_data
VOL_REDIS=pikachu_redis_data
VOL_TRAEFIK_ACME=pikachu_traefik_acme
