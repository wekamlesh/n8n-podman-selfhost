# =====================
# GLOBAL
# =====================
TZ=Asia/Kolkata
PODMAN_UID=1000
PODMAN_SOCK=/run/user/1000/podman/podman.sock

# =====================
# DOMAIN / URLS
# =====================
N8N_HOST=n8n.example.com
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://${N8N_HOST}/
N8N_EDITOR_BASE_URL=https://${N8N_HOST}/

# =====================
# IMAGES
# =====================
CADDY_IMAGE=docker.io/library/caddy:2.11-alpine
N8N_IMAGE=docker.io/n8nio/n8n:stable
POSTGRES_IMAGE=docker.io/library/postgres:16-alpine
REDIS_IMAGE=docker.io/library/redis:7-alpine

# =====================
# POSTGRES
# =====================
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme

# =====================
# N8N
# =====================
N8N_ENCRYPTION_KEY=generate-a-long-random-secret
N8N_MAX_OLD_SPACE_SIZE=512

# =====================
# CADDY / LETSENCRYPT
# =====================
LETSENCRYPT_EMAIL=you@example.com

# =====================
# BACKUP
# =====================
BACKUP_DIR=/srv/backups-n8n
BACKUP_PASSPHRASE=strong-backup-passphrase
RCLONE_REMOTE=pcloud-crypt
RCLONE_REMOTE_PATH=backups-n8n/

# =====================
# VOLUMES
# =====================
VOL_POSTGRES=pgdata
VOL_N8N=n8n_data
VOL_REDIS=redis_data
VOL_CADDY_DATA=caddy_data
VOL_CADDY_CONFIG=caddy_config
